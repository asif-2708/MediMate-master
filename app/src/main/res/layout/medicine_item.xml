<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:backgroundTint="@color/gray"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="20dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:id="@+id/medName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    tools:text="Paracetamol"
                    android:background="@color/cream"
                    android:textSize="22sp"/>
            <TextView
                    android:id="@+id/border"
                    android:layout_below="@id/medName"
                     android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/dark_gray"/>

            <TextView
                    android:id="@+id/medicineListTime"
                    android:layout_width="120dp"
                    tools:text="8:00AM"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="22sp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/white"
                    android:textAlignment="textEnd"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/view_med_dosage"
                    android:text="@string/view_med_dosage"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:layout_below="@+id/border"
                    android:id="@+id/dosage"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pillAmount"
                    android:layout_toEndOf="@+id/dosage"
                    android:layout_below="@+id/border"
                    tools:text="5 pills"
                    android:padding="5dp"
                    android:textSize="18sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dosage"
                    android:padding="5dp"
                    tools:text="@string/requirements"
                    android:text="@string/requirements"
                    android:textSize="18sp"
                    android:id="@+id/requirementsHeader"/>

            <TextView
                    android:id="@+id/requirementsText"
                    android:padding="5dp"
                    android:textSize="18sp"
                    tools:text="With ice cold bear"
                    android:layout_below="@id/dosage"
                    android:layout_toEndOf="@id/requirementsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <!--let user know card is clickable-->
            <!--<TextView
                    android:layout_below="@id/requirementsHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_card"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/royal"
                    android:background="@color/light_pink"/>-->

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
