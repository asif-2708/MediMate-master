<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>
    <androidx.cardview.widget.CardView
            android:id="@+id/medicineListCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="27dp"
            android:layout_gravity="center_horizontal"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="12dp"
            app:cardElevation="10dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="20dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:orientation="vertical">

            <TextView
                    android:textAlignment="center"
                    android:id="@+id/medicineListTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:background="@color/cream"
                    android:textSize="22sp"/>

            <TextView
                    android:id="@+id/border"
                    android:layout_below="@id/medicineListTime"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/dark_gray"/>

            <TextView android:id="@+id/medicineNameList"
                      android:paddingTop="5dp"
                      android:paddingBottom="5dp"
                      android:layout_centerHorizontal="true"
                      android:layout_below="@id/border"
                      tools:text="Drugs\nDrugs\nDrugs\nDrugs\n"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="18sp"
            />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>

